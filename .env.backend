# Local development defaults. Change for production.
SECRET_KEY=dev-please-change-me
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Primary DB (matches compose db service)
DB_NAME=omnifin_primary
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=db
DB_PORT=5432

# Knowledge DB (optional; points to same db service by default)
KNOWLEDGE_DB_NAME=omnifin_knowledge
KNOWLEDGE_DB_USER=postgres
KNOWLEDGE_DB_PASSWORD=password
KNOWLEDGE_DB_HOST=db
KNOWLEDGE_DB_PORT=5432

# Redis / Celery (matches compose redis service)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
REDIS_URL=redis://redis:6379/2

# Optional external APIs
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
ELEVENLABS_API_KEY=

# Optional email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=2525
EMAIL_USE_TLS=false
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
